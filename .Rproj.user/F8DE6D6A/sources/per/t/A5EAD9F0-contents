import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# Create dataset
df = pd.DataFrame(
    {"Word": ["donut", "cake", "apple", "juice", "book"],
     "Logit": [11, 10.5, 10.8, 10.7, 8]}
)

